<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".shipping">
    <TextView
        android:id="@+id/tvchackout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHACK OUT"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#FF5722"
        />


    <EditText
        android:id="@+id/etsize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvchackout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:hint="Size"
        />

    <TextView
        android:id="@+id/tvsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/etsize"
        android:layout_marginRight="5dp"
        android:text="Size:"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etsize"
        android:text="Date of shipping"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <CalendarView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvdate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/tolist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_centerHorizontal="true"
        android:text="next"
        android:layout_marginTop="10dp"
        android:onClick="next" />
    <Button
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="BtnBack"
        android:text="back"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>